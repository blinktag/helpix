<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>


  <%= PBF.text_input f, :user_id %>
  <%= PBF.text_input f, :subject %>

  <%= PBF.text_input f, :body %>

  <%= PBF.text_input f, :status %>
  <%= PBF.text_input f, :department_id %>
  <div>
    <%= submit "Save" %>
  </div>
<% end %>
